{
  "name": "backend",
  "version": "0.0.1",
  "description": "",
  "main": "bin/app.ts",
  "scripts": {
    "compile": "tsc && tsc-alias",
    "tsc": "tsc",
    "build": "npm run compile && cdk synth",
    "deploy": "npm run tsc && cdk deploy ${1} --outputs-file ./cdk-outputs.json --exclusively --require-approval never",
    "deploy-all": "npm run compile && cdk deploy --all --outputs-file ./cdk-outputs.json --exclusively",
    "test": "npm run compile && mocha dist/tests/**/*test.js",
    "test:coverage": "npm run compile && nyc mocha dist/tests/**/*test.js",
    "build_node_layer": "mkdir -p ./nodejs/node_modules && npm install --prefix ./nodejs --omit=dev  && mkdir -p nodejs && cp -r node_modules nodejs/ && zip -r  node_modules.zip nodejs"

  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/chai": "^4.3.4",
    "@types/chai-as-promised": "^7.1.5",
    "@types/express": "^4.17.16",
    "@types/mocha": "^10.0.1",
    "@types/mysql": "^2.15.21",
    "@typescript-eslint/eslint-plugin": "^5.49.0",
    "@typescript-eslint/parser": "^5.49.0",
    "chai": "^4.3.7",
    "chai-as-promised": "^7.1.1",
    "eslint": "^8.32.0",
    "eslint-plugin-react": "^7.32.1",
    "express": "^4.18.2",
    "mocha": "^10.2.0",
    "nyc": "^15.1.0",
    "prettier": "^2.8.3",
    "tsc-alias": "^1.8.2",
    "typescript": "^4.9.5",
    "@types/sinon": "^10.0.13",
    "sinon": "^15.0.1",
    "constructs": "^10.0.0",
    "source-map-support": "^0.5.21",
    "aws-cdk-lib": "^2.64.0",
    "cdk": "^2.66.1"
  },
  "dependencies": {
    "mysql": "^2.18.1",
    "dotenv": "^8.2.0",
    "esbuild": "^0.17.10",
    "source-map-support": "^0.5.21"
  },
  "nyc": {
    "branches": "&gt;80",
    "lines": "&gt;80",
    "functions": "&gt;80",
    "statements": "&gt;80",
    "check-coverage": true,
    "all": true,
    "include": [
      "src/**/*.ts"
    ],
    "reporter": [
      "html",
      "lcov",
      "text",
      "text-summary"
    ],
    "report-dir": "coverage"
  }

}
