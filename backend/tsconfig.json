{
  "compilerOptions": {
    "target": "es2020",
    "module": "es2020",
    "lib": ["es2020"],
    "allowJs": true,
    "rootDir": ".",
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "skipLibCheck": true,
    "declaration": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": false,
    "inlineSourceMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "moduleResolution": "Node",
    "baseUrl": ".",
    "paths": {
      "/opt/nodejs/node_modules/sql-layer": ["src/layer/sql-layer.ts"],
      "/opt/nodejs/node-modules/asyncwrap": ["src/lambda/async-wrap.ts"],
      "/opt/nodejs/node-modules/userController": ["src/controllers/user.ts"],
      "/opt/nodejs/node-modules/userServices": ["src/services/user.ts"],
      "/opt/nodejs/node-modules/userModel": ["src/models/user.ts"]
    }
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },
  "include": ["src"],
  "exclude": ["node_modules", "cdk.out"]
}
