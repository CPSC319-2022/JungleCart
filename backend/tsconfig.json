{
  "compilerOptions": {
    "target": "es2020",
    "module": "es2020",
    "lib": ["es2020"],
    "allowJs": true,
    "rootDir": ".",
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "skipLibCheck": true,
    "declaration": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": false,
    "inlineSourceMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "moduleResolution": "Node",
    "baseUrl": ".",
    "paths": {
      "/opt/nodejs/node_modules/sql-layer": [
        "src/layer/sql-layer/sql-layer.ts"
      ],
      "/opt/nodejs/node_modules/queryBuilder-layer": [
        "src/layer/queryBuilder-layer/queryBuilder-layer.ts"
      ],
      "/opt/nodejs/node_modules/user-layer": ["src/layer/user-layer/index.ts"],
      "/opt/nodejs/node_modules/user-layer/asyncWrap": [
        "src/layer/user-layer/async-wrap.ts"
      ],
      "/opt/nodejs/node_modules/user-layer/controller": [
        "src/layer/user-layer/controller.ts"
      ],
      "/opt/nodejs/node_modules/user-layer/service": [
        "src/layer/user-layer/service.ts"
      ],
      "/opt/nodejs/node_modules/user-layer/model": [
        "src/layer/user-layer/model.ts"
      ],
      "/opt/nodejs/node_modules/user-layer/queryBuilder": [
        "src/layer/user-layer/queryBuilder.ts"
      ],
      "/opt/nodejs/node_modules/ses-layer": ["src/layer/ses-layer/ses-layer.ts"]
    }
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },
  "include": ["src"],
  "exclude": ["node_modules", "cdk.out"]
}
