{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "rootDir": ".",
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "skipLibCheck": true,
    "declaration": false,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": false,
    "inlineSourceMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "moduleResolution": "Node",
    "baseUrl": ".",
    "paths": {
      "/opt/sql-layer": ["src/layer/sql-layer/sql-layer.ts"],
      "/opt/nodejs/node_modules/*": ["node_modules/*"],
      "@/lambdas/*": ["src/lambda/*"],
      "/opt/ses-layer": ["src/layer/ses-layer/ses-layer.ts"],
      "/opt/utils-layer": ["src/layer/utils-layer/utils-layer.ts"],
      "/opt/queryBuilder-layer": [
        "src/layer/queryBuilder-layer/queryBuilder-layer.ts"
      ],
    }
  },
  "include": ["src", "tests"],
  "exclude": ["node_modules", "cdk.out", "dist"]
}
