{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["es2020"],
    "allowJs": true,
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "skipLibCheck": true,

    "baseUrl": ".",
    "paths": {
      "/opt/nodejs/node_modules/sql-layer": ["src/layer/sql-layer.ts"]
    }
  },
  
  "include": ["src", "src/utils/types.ts", "src/database/mock"],
  "exclude": ["node_modules"]
}
