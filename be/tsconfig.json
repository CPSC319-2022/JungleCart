{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["es6"],
    "allowJs": true,
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "skipLibCheck": true
  },
  "include": [
    "src",
    "src/utils/types.ts",
    "src/database/mock",
    "../backend/src/lambda/carts-lambda.ts"
  ],
  "exclude": ["node_modules"]
}
